<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FlyoutMovie.Views.ItemDetailPage"
             Title="{Binding Title}">
   
    <StackLayout Spacing="20" Padding="15">
        <Label Text="Id:" FontSize="Medium" />
        <Entry Text="{Binding Id}" FontSize="Medium"/>
        <Label Text="Title:" FontSize="Medium" />
        <Entry x:Name="TitleOfMovie" Text="{Binding MovieTitle}" FontSize="Medium"/>
        <Label Text="Released:" FontSize="Medium" />
        <DatePicker Date="{Binding Released}" FontSize="Medium"/>
        <Label Text="MediaFormat:" FontSize="Medium" />
        <Entry Text="{Binding MediaFormat}" FontSize="Medium"/>
        <StackLayout>
            <Button Text="Save" Command="{Binding SaveCommand}" />
        </StackLayout>
    </StackLayout>
    
</ContentPage>